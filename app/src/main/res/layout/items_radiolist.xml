<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LayoutLinear_RadiolistItems"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="15dp"
    android:paddingEnd="15dp"
    android:paddingBottom="10dp">


    <TextView
        android:id="@+id/textview_Radiolist_GenreTitle"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="TextView"
        android:textAlignment="textStart"
        android:textDirection="ltr"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@id/recycle_Radiolist_items"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent=".90" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle_Radiolist_items"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:paddingStart="15dp"
        app:layout_constraintBottom_toTopOf="@id/textview_Radiolist_View1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_Radiolist_GenreTitle"
        app:layout_constraintWidth_percent=".85" />

    <View
        android:id="@+id/textview_Radiolist_View1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="#E6E63C55"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recycle_Radiolist_items"
        app:layout_constraintWidth_percent=".80" />

</androidx.constraintlayout.widget.ConstraintLayout>